# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.elm]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
